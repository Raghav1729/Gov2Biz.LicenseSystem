@model Gov2Biz.Web.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Gov2Biz License System - Login</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TenantDomain" class="form-label"></label>
                        <input asp-for="TenantDomain" class="form-control" />
                        <span asp-validation-for="TenantDomain" class="text-danger"></span>
                        <small class="form-text text-muted">Enter your tenant domain (e.g., agency1.gov, agency2.gov)</small>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12">
                        <small class="text-muted">
                            <strong>Test Users:</strong><br>
                            Administrator: admin@gov2biz.com / Admin123! / default<br>
                            Agency Staff: agency@gov2biz.com / Agency123! / default<br>
                            Applicant: applicant@gov2biz.com / Applicant123! / default
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
