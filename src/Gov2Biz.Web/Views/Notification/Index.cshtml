@{
    ViewData["Title"] = "Notifications";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Notifications</h1>
        <div>
            @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
            {
                <a href="@Url.Action("Create", "Notification")" class="btn btn-primary me-2">
                    <i class="fas fa-plus"></i> Send Notification
                </a>
            }
            <form asp-action="MarkAllAsRead" method="post" style="display: inline;">
                <button type="submit" class="btn btn-secondary">
                    <i class="fas fa-check-double"></i> Mark All Read
                </button>
            </form>
        </div>
    </div>

    <!-- Notification List -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Messages
                @if (ViewBag.UserRole == "Administrator")
                {
                    <span class="text-muted small ml-2">(All Agencies)</span>
                }
                else if (ViewBag.UserRole == "AgencyStaff")
                {
                    <span class="text-muted small ml-2">(@ViewBag.TenantId)</span>
                }
                else
                {
                    <span class="text-muted small ml-2">(My Messages)</span>
                }
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="notificationTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Message</th>
                            <th>Type</th>
                            <th>Priority</th>
                            <th>Created Date</th>
                            <th>License</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var notification in Model)
                        {
                            <tr class="@(notification.IsRead ? "" : "table-info")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!notification.IsRead)
                                        {
                                            <span class="badge bg-primary me-2">New</span>
                                        }
                                        <div>
                                            <strong>@notification.Message</strong>
                                            <br>
                                            <small class="text-muted">To: @notification.Recipient</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-@(notification.Type == "License Application" ? "primary" : notification.Type == "Document Review" ? "warning" : notification.Type == "System" ? "secondary" : "info")">
                                        @notification.Type
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-@(notification.Priority == "High" ? "danger" : notification.Priority == "Medium" ? "warning" : "success")">
                                        @notification.Priority
                                    </span>
                                </td>
                                <td>
                                    @{
                                        var createdDate = notification.CreatedDate;
                                        if (createdDate != null)
                                        {
                                            try {
                                                var date = (DateTime)createdDate;
                                                @date.ToString("MMM dd, yyyy")
                                            }
                                            catch {
                                                <span class="text-muted">-</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (notification.LicenseNumber != null)
                                    {
                                        <a href="@Url.Action("Details", "License", new { id = notification.LicenseId })" class="text-decoration-none">
                                            @notification.LicenseNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (notification.IsRead)
                                    {
                                        <span class="badge bg-success">Read</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Unread</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Notification", new { id = notification.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
                                        {
                                            <form asp-action="Delete" asp-route-id="@notification.Id" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this notification?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#notificationTable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[3, 'desc']],
                language: {
                    search: "Search notifications:",
                    lengthMenu: "Show _MENU_ notifications per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ notifications",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
}
