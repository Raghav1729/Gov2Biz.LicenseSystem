@{
    ViewData["Title"] = "Documents";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Document Management</h1>
        <a href="@Url.Action("Upload", "Document")" class="btn btn-primary">
            <i class="fas fa-upload"></i> Upload Document
        </a>
    </div>

    <!-- Document List -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Documents
                @if (ViewBag.UserRole == "Administrator")
                {
                    <span class="text-muted small ml-2">(All Agencies)</span>
                }
                else if (ViewBag.UserRole == "AgencyStaff")
                {
                    <span class="text-muted small ml-2">(@ViewBag.TenantId)</span>
                }
                else
                {
                    <span class="text-muted small ml-2">(My Documents)</span>
                }
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="documentTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Upload Date</th>
                            <th>Status</th>
                            <th>License</th>
                            <th>Uploaded By</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var document in Model)
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-file-pdf text-danger"></i>
                                    @document.FileName
                                </td>
                                <td>@document.DocumentType</td>
                                <td>@document.FileSize</td>
                                <td>
                                    @{
                                        var uploadDate = document.UploadDate;
                                        if (uploadDate != null)
                                        {
                                            try {
                                                var date = (DateTime)uploadDate;
                                                @date.ToString("MMM dd, yyyy")
                                            }
                                            catch {
                                                <span class="text-muted">-</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-@(document.Status == "Approved" ? "success" : document.Status == "Pending" ? "warning" : document.Status == "Under Review" ? "info" : "danger")">
                                        @document.Status
                                    </span>
                                </td>
                                <td>@document.LicenseNumber</td>
                                <td>@document.UploadedBy</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "Document", new { id = document.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Download", "Document", new { id = document.Id })" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
                                        {
                                            <form asp-action="Delete" asp-route-id="@document.Id" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this document?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#documentTable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[3, 'desc']],
                language: {
                    search: "Search documents:",
                    lengthMenu: "Show _MENU_ documents per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ documents",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
}
