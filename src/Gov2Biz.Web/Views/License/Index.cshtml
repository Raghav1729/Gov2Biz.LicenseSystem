@{
    ViewData["Title"] = "Licenses";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">License Management</h1>
        @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
        {
            <a href="@Url.Action("Create", "License")" class="btn btn-primary">
                <i class="fas fa-plus"></i> New License
            </a>
        }
    </div>

    <!-- License List -->
    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Licenses
                @if (ViewBag.UserRole == "Administrator")
                {
                    <span class="text-muted small ml-2">(All Agencies)</span>
                }
                else if (ViewBag.UserRole == "AgencyStaff")
                {
                    <span class="text-muted small ml-2">(@ViewBag.TenantId)</span>
                }
                else
                {
                    <span class="text-muted small ml-2">(My Licenses)</span>
                }
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="licenseTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>License Number</th>
                            <th>Type</th>
                            <th>Applicant</th>
                            <th>Business</th>
                            <th>Status</th>
                            <th>Issued Date</th>
                            <th>Expiry Date</th>
                            @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
                            {
                                <th>Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var license in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("Details", "License", new { id = license.Id })" class="text-primary">
                                        @license.LicenseNumber
                                    </a>
                                </td>
                                <td>@license.LicenseType</td>
                                <td>@license.ApplicantName</td>
                                <td>@license.BusinessName</td>
                                <td>
                                    <span class="badge badge-@(license.Status == "Active" ? "success" : license.Status == "Pending" || license.Status == "Under Review" ? "warning" : license.Status == "Expired" ? "danger" : "info")">
                                        @license.Status
                                    </span>
                                </td>
                                <td>
                                    @{
                                        var issuedDate = license.IssuedDate;
                                        if (issuedDate != null)
                                        {
                                            try {
                                                var date = (DateTime)issuedDate;
                                                @date.ToString("MMM dd, yyyy")
                                            }
                                            catch {
                                                <span class="text-muted">-</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        var expiryDate = license.ExpiryDate;
                                        if (expiryDate != null)
                                        {
                                            try {
                                                var date = (DateTime)expiryDate;
                                                @date.ToString("MMM dd, yyyy")
                                            }
                                            catch {
                                                <span class="text-muted">-</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    }
                                </td>
                                @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
                                {
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "License", new { id = license.Id })" class="btn btn-sm btn-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "License", new { id = license.Id })" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (ViewBag.UserRole == "Administrator")
                                            {
                                                <form asp-action="Delete" asp-route-id="@license.Id" method="post" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this license?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#licenseTable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']],
                language: {
                    search: "Search licenses:",
                    lengthMenu: "Show _MENU_ licenses per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ licenses",
                    paginate: {
                        first: "First",
                        last: "Last",
                        next: "Next",
                        previous: "Previous"
                    }
                }
            });
        });
    </script>
}
