@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">
                Welcome to Gov2Biz License System
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @ViewBag.UserName</p>
                            <p><strong>Role:</strong> @ViewBag.UserRole</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Tenant ID:</strong> @ViewBag.TenantId</p>
                            <p><strong>Status:</strong> <span class="badge bg-success">Active</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "License")" class="btn btn-primary">View Licenses</a>
                        @if (ViewBag.UserRole == "Administrator" || ViewBag.UserRole == "AgencyStaff")
                        {
                            <a href="@Url.Action("Create", "License")" class="btn btn-secondary">Create License</a>
                        }
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-info">Dashboard</a>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-danger w-100">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
